# ===========================================
# AI TEACHER ASSISTANT - Environment Configuration
# ===========================================

# Application Configuration
NODE_ENV=development
REACT_APP_API_URL=http://localhost:3000
REACT_APP_FORCE_DEMO_MODE=false
GENERATE_SOURCEMAP=true

# Firebase Configuration (Required)
REACT_APP_FIREBASE_API_KEY=your_firebase_api_key_here
REACT_APP_FIREBASE_AUTH_DOMAIN=your-project.firebaseapp.com
REACT_APP_FIREBASE_PROJECT_ID=your-project-id
REACT_APP_FIREBASE_STORAGE_BUCKET=your-project.appspot.com
REACT_APP_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
REACT_APP_FIREBASE_APP_ID=your_app_id
REACT_APP_FIREBASE_MEASUREMENT_ID=your_measurement_id

# Google AI Services (Required)
REACT_APP_GEMINI_API_KEY=your_gemini_api_key_here
REACT_APP_VERTEX_AI_PROJECT_ID=your_vertex_ai_project_id
REACT_APP_GOOGLE_CLOUD_API_KEY=your_google_cloud_api_key

# MongoDB Configuration (Optional - for additional data storage)
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/ai-teacher-assistant
MONGODB_DB_NAME=ai-teacher-assistant

# MSG91 SMS Service (Optional - for SMS notifications)
MSG91_API_KEY=your_msg91_api_key
MSG91_SENDER_ID=your_sender_id

# Email Configuration (Optional - for email notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# Security Configuration
JWT_SECRET=your_jwt_secret_key_minimum_32_characters
ENCRYPTION_KEY=your_encryption_key_32_characters

# Development Tools
REACT_APP_USE_MOCK_SERVICES=false
REACT_APP_ENABLE_LOGGING=true
REACT_APP_DEBUG_MODE=true

# Performance Monitoring
REACT_APP_ENABLE_ANALYTICS=true
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# ===========================================
# INSTRUCTIONS:
# 1. Copy this file to .env.local for development
# 2. Copy this file to .env.production for production
# 3. Replace all "your_*" values with actual credentials
# 4. Never commit .env.local or .env.production to version control
# ===========================================

 