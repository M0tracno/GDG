# Server Configuration
NODE_ENV=development
PORT=5000

# JWT Settings
JWT_SECRET=make_this_very_secure_in_production_at_least_32_chars_long
JWT_EXPIRES_IN=7d

# CORS Configuration
ADDITIONAL_CORS_ORIGINS=https://your-frontend-domain.com,https://another-domain.com

# Database Settings
# Database Type (mongodb or sqlite)
DB_TYPE=mongodb

# MongoDB Connection
MONGODB_URI=mongodb://localhost:27017/teacher-assistant
MONGODB_USER=username
MONGODB_PASSWORD=password

# Legacy SQLite Settings (for backward compatibility)
# For production on Render, set RENDER=true

# Logging
LOG_LEVEL=debug

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100
AUTH_RATE_LIMIT_WINDOW_MS=900000
AUTH_RATE_LIMIT_MAX=10
